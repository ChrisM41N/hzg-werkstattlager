<Window x:Class="WerkstattlagerUI.Views.MoveItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WerkstattlagerUI.Views"
        mc:Ignorable="d"
        Height="240" Width="270" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Kommentar:" Style="{StaticResource TextBoxInfo}" VerticalAlignment="Bottom" />
        <TextBox x:Name="CommentField" Grid.Row="1" Style="{StaticResource TextBoxEnabled}" Margin="5" Height="50" TextWrapping="Wrap"/>
        <Button x:Name="SaveButton" Grid.Row="2" Content="Speichern"  Style="{StaticResource ButtonDialog}" Click="SaveButton_Click" />
    </Grid>
</Window>
